#!/usr/bin/env python3
"""
CAN MQTT Bridge - Executable entry point.

Bridges Scheiber CAN devices to Home Assistant via MQTT.
Uses the new scheiber module for clean architecture.
"""

import sys
from pathlib import Path

# Add scheiber module to path
sys.path.insert(0, str(Path(__file__).parent))

from can_mqtt_bridge.__main__ import main

if __name__ == "__main__":
    sys.exit(main())
